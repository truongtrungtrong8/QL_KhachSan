@model IEnumerable<QL_KhachSan.ModelDbs.Roomimage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Owner.cshtml";
}

@*<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>*@

<div class="row">
    <div class="col-md-12">
        <!-- DATA TABLE -->
            <h3 class="title-5 m-b-35">Hotels</h3>
            <div class="table-data__tool">
                <div class="table-data__tool-left">
                    <div class="rs-select2--light rs-select2--md">
                        <select class="js-select2" name="property">
                            <option selected="selected">All Properties</option>
                            <option value="">Option 1</option>
                            <option value="">Option 2</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                    <div class="rs-select2--light rs-select2--sm">
                        <select class="js-select2" name="time">
                            <option selected="selected">Today</option>
                            <option value="">3 Days</option>
                            <option value="">1 Week</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                    <button class="au-btn-filter">
                        <i class="zmdi zmdi-filter-list"></i>filters
                    </button>
                </div>
                <div class="table-data__tool-right">
                    <a asp-action="Create" class="au-btn au-btn-icon au-btn--green au-btn--small">
                        <i class="zmdi zmdi-plus"></i>Thêm dữ liệu
                    </a>
                    <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                        <select class="js-select2" name="type">
                            <option selected="selected">Excel</option>
                            <option value="">Xuất Excel</option>
                            <option value="">Nhập Excel</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                </div>
        </div>
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead class="thead-light">
                    <tr>
                        <th>
                            Tên khách sạn
                        </th>
                        <th>
                            Tên phòng
                        </th>
                        <th>
                            Hình ảnh 1
                        </th>
                        <th>
                            Hình ảnh 2
                        </th>
                        <th>
                            Hình ảnh 3
                        </th>
                        
                        <th></th>
                    </tr>
            </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr class="tr-shadow">
            <td>
                @item.Room.Hotel.HotelName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomName)
            </td>
            <td>
                @if(item.RoomimageAvt != null)
                {
                    <img src="~/images/@item.RoomimageAvt" width="100" height="100"/>
                }
                else{
                    <b>Chưa có</b>
                }
            </td>
            <td>
                @if(item.RoomimageI1 != null)
                {
                    <img src="~/images/@item.RoomimageI1" width="100" height="100"/>
                }
                else{
                    <b>Chưa có</b>
                }
            </td>
            <td>
                @if(item.RoomimageI2 != null)
                {
                    <img src="~/images/@item.RoomimageI2" width="100" height="100"/>
                }
                else{
                    <b>Chưa có</b>
                }
                
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoomimageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoomimageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoomimageId">Delete</a>
            </td>
        </tr>
        <tr class="spacer"></tr>
}
    </tbody>
</table>
        </div>
    </div>
</div>
