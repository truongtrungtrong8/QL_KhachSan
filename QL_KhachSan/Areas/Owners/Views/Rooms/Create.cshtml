@model QL_KhachSan.ModelDbs.Room

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Owner.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
function chooseFile(fileInput) {
    if (fileInput.files && fileInput.files[0]) {
        var reader = new FileReader();
        reader.onload = function(e) {
            $('#image').attr('src', e.target.result);
        }
        reader.readAsDataURL(fileInput.files[0]);
    }

}
</script>

<div class="card w-75 container">
    <div class="card-header">
        <strong>Thêm phòng</strong>
    </div>
    <div class="card-body card-block">
        <form enctype="multipart/form-data" asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row form-group">
                    <div class="col col-md-2">
                        <label asp-for="HotelId" class="control-label">Tên khách sạn</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <select asp-for="HotelId" class ="form-control" asp-items="ViewBag.HotelId"></select>
                    </div>
            </div>
            
            <div class="row form-group">
                    <div class="col col-md-2">
                        <label asp-for="TorId" class="control-label">Loại phòng</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <select asp-for="TorId" class ="form-control" asp-items="ViewBag.TorId"></select>
                    </div>
            </div>

            <div class="row form-group">
                    <div class="col col-md-2">
                        <label asp-for="RoomName" class="control-label">Tên phòng</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input asp-for="RoomName" class="form-control" />
                        <span asp-validation-for="RoomName" class="text-danger"></span>
                    </div>
            </div>

            <div class="row form-group" hidden>
                    <div class="col col-md-2">
                        <label asp-for="RoomStatus" class="control-label">Trạng thái</label>
                    </div>
                    <div class="col-12 col-md-5">

                         <select asp-for="RoomStatus" class ="form-control">
                            <option value="false">Còn trống</option>
                            <option value="true">Đã được đặt</option> 
                        </select>

                        @*<input asp-for="RoomStatus" class="form-control" />*@
                        <span asp-validation-for="RoomStatus" class="text-danger"></span> 
                    </div>
            </div>

            <div class="row form-group">
                    <div class="col col-md-2">
                        <label asp-for="RoomDescript" class="control-label">Mô tả phòng</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input asp-for="RoomDescript" class="form-control" />
                        <span asp-validation-for="RoomDescript" class="text-danger"></span>
                    </div>
            </div>

            <div class="row form-group">
                    <div class="col col-md-2">
                        <label class="control-label">Hình đại diện</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <img src="~/images/MacDinh.jpg" alt="" id="image" width="200" height="200" />
                        <input type="file" name="myfile" onchange="chooseFile(this)" accept="image/gif, image/jpeg, image/png"/>
                    </div>
            </div>

            <div class="row form-group">
                    <div class="col col-md-2">
                        <label class="control-label">Hình chi tiết</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input type="file" name="myfiles" multiple accept="image/gif, image/jpeg, image/png"/>
                    </div>
            </div>

            <div class="card-footer">
                <button type="submit" value="Create" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Thêm mới
                </button>
             </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

