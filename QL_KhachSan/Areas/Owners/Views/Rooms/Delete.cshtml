@model QL_KhachSan.ModelDbs.Room

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout_Owner.cshtml";
}

<div class="card">
    <div class="card-header">
        <strong>Hotels</strong>
    </div>
    <div class="card-body card-block">
        <h3>Bạn có chắc chắn muốn xóa?</h3>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RoomName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RoomName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RoomStatus)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RoomStatus)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RoomDescript)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RoomDescript)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Hotel)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Hotel.DistrictId)
            </dd class>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Tor)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Tor.TorId)
            </dd class>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="HotelId" />
            <input type="hidden" asp-for="RoomId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
