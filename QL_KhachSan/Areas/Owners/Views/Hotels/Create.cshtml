    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Owner_Temp.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/LoadData.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
