@model QL_KhachSan.ModelDbs.Customer
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}


<div class="card w-75 container">
    <div class="card-header">
        <strong>Cập nhật thông tin cá nhân</strong>
    </div>
    <div class="card-body card-block">
        <form asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row form-group" hidden>
                    <div class="col col-md-2">
                         <label asp-for="AccountUsername" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input asp-for="AccountUsername" class="form-control" value="@Context.Session.GetString("Cus_Phone")" />
                    </div>
            </div>

            <div class="row form-group">
                    <div class="col col-md-2">
                         <label asp-for="CustomerName" class="control-label">Họ tên</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input asp-for="CustomerName" class="form-control" required />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
            </div>

            <div class="row form-group">
                    <div class="col col-md-2">
                         <label asp-for="CustomerPhone" class="control-label">Số điện thoại</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input asp-for="CustomerPhone" class="form-control" hidden/>
                        <input class="form-control" value="@Context.Session.GetString("Cus_Phone")" readonly style="background-color:white" />
                        <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                    </div>
            </div>

            <div class="row form-group">
                    <div class="col col-md-2">
                         <label asp-for="CustomerAddress" class="control-label">Địa chỉ</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input asp-for="CustomerAddress" class="form-control" />
                         <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                    </div>
            </div>

            <div class="row form-group">
                    <div class="col col-md-2">
                         <label asp-for="CustomerEmail" class="control-label">Email</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input asp-for="CustomerEmail" class="form-control" type="email" required />
                        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                    </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-2">
                <label asp-for="CustomerSex" class="control-label">Giới tính</label>
                </div>
                <fieldset id="CustomerSex">
                    <input type="radio" id="Male" name="CustomerSex" value="true" onchange="SetSex()"> Nam<br />
                    <input type="radio" id="Female" name="CustomerSex" value="false" onchange="SetSex()"> Nữ<br />
                </fieldset>
                <script type="text/javascript">
                    function SetSex() {
                        if (document.getElementById("Male").checked == true) {
                            document.getElementById("CustomerssSex").value = document.getElementById("Male").value;
                        }
                        else {
                            document.getElementById("CustomerssSex").value = document.getElementById("Female").value;
                        }
                    }
                </script>
                <input asp-for="CustomerSex" class="form-control" id="CustomerssSex" value="" hidden/>
                <span asp-validation-for="CustomerSex" class="text-danger"></span>
            </div>

            <div class="row form-group">
                    <div class="col col-md-2">
                         <label asp-for="CustomerDateofbirth" class="control-label">Ngày sinh</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input asp-for="CustomerDateofbirth" class="form-control" type="date" />
                        <span asp-validation-for="CustomerDateofbirth" class="text-danger"></span>
                    </div>
            </div>

            <div class="row form-group">
                    <div class="col col-md-2">
                         <label asp-for="CustomerBankaccount" class="control-label">Số tài khoản ngân hàng</label>
                    </div>
                    <div class="col-12 col-md-5">
                        <input asp-for="CustomerBankaccount" class="form-control" required />
                        <span asp-validation-for="CustomerBankaccount" class="text-danger"></span>
                    </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" asp-route="Customers" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
